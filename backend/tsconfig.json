{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./types"] // Include custom types folder
  },
  "include": ["./**/*.ts",
   "types/**/*.d.ts"
  ],  // Include all .ts files in the project
  "exclude": ["node_modules", "dist"]
}
